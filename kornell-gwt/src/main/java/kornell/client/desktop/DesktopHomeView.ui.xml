<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:k='urn:import:kornell.client.ui'>

	<ui:style>
		.norte {
			background-color: lightblue;
		}
		
		.sul {
			background-color: lightgreen;
		}
		
		.leste {
			background-color: lightgrey;
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX' styleName="debug">

		<g:north size='50'>
			<g:FlowPanel styleName="{style.norte}">
				<g:Label>Top Noth Header</g:Label>
			</g:FlowPanel>
		</g:north>

		<g:south size='50'>
			<g:FlowPanel styleName="{style.sul}">
				<g:Label>Bell Bottom</g:Label>
			</g:FlowPanel>
		</g:south>
		

		<g:center>
			<g:HorizontalPanel width="100%" height="100%" borderWidth="1">
				<g:FlowPanel>
					<g:Label>There is no place like 127.0.0.1</g:Label>
				</g:FlowPanel>
			</g:HorizontalPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>