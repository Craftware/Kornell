<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel ui:field="slidePanel" addStyleNames="slidePanel left">
        <b:Button ui:field="btnNewTextItem" title="Inserir texto" addStyleNames="btnNotSelected btnStandard right"></b:Button>
        <b:Button ui:field="btnNewVideoLinkItem" title="Inserir video" addStyleNames="btnNotSelected btnStandard right marginRight20"></b:Button>
        <b:Button ui:field="btnDiscard" title="Descartar alterações" addStyleNames="btnNotSelected btnStandard right"></b:Button>
        <b:Button ui:field="btnSave" title="Salvar alterações" addStyleNames="btnAction btnStandard right"></b:Button>
		<b:Form ui:field="form">
	      <g:FlowPanel ui:field="slideFields" addStyleNames="fieldsWrapper">    
	      </g:FlowPanel>
	    </b:Form>
		<g:ScrollPanel ui:field="slideItemsScroll" addStyleNames="slideItemsScroll">
			<g:FlowPanel ui:field="slidePanelItems"></g:FlowPanel>
		</g:ScrollPanel>
	</g:FlowPanel>

</ui:UiBinder>