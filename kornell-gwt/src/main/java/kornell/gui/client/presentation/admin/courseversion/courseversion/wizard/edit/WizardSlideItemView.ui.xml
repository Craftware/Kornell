<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel ui:field="slideItemWrapper" addStyleNames="slideItemWrapper left">
	    <b:Button ui:field="btnDelete" title="Excluir item" addStyleNames="btnSelected btnStandard right"></b:Button>
	    <b:Button ui:field="btnMoveDown" title="Mover para baixo" addStyleNames="btnNotSelected btnStandard right"></b:Button>
	    <b:Button ui:field="btnMoveUp" title="Mover para cima" addStyleNames="btnNotSelected btnStandard right"></b:Button>
		<b:Icon type="HOME" ui:field="slideItemIcon" addStyleNames="slideItemIcon highlightText"></b:Icon>
		<g:Label ui:field="slideItemLabel" addStyleNames="slideItemHeader highlightText"></g:Label>
		<b:Form ui:field="form">
	      <g:FlowPanel ui:field="slideItemFields" addStyleNames="fieldsWrapper">    
	      </g:FlowPanel>
	    </b:Form>
	    <g:Image addStyleNames="slideItemPreviewImage" ui:field="slideItemPreviewImage"></g:Image>
	</g:FlowPanel>

</ui:UiBinder> 