<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel ui:field="wizardPanel" addStyleNames="courseVersionWizardPanel">
		<g:ScrollPanel addStyleNames="sidePanelScroll left">
			<g:FlowPanel ui:field="sidePanel" addStyleNames="sidePanel left"></g:FlowPanel>
		</g:ScrollPanel>
		<g:FlowPanel ui:field="slidePanel" addStyleNames="slidePanel left">
			<b:Form ui:field="form">
		      <g:FlowPanel ui:field="slideFields" addStyleNames="fieldsWrapper">    
		      </g:FlowPanel>
		      <g:Button ui:field="btnDiscard" addStyleNames="btnNotSelected btnStandard right">Descartar</g:Button>
		      <g:Button ui:field="btnSave" addStyleNames="btnAction btnStandard right">Salvar</g:Button>
		    </b:Form>
			<g:ScrollPanel ui:field="slideItemsScroll" addStyleNames="slideItemsScroll">
				<g:FlowPanel ui:field="slidePanelItems"></g:FlowPanel>
			</g:ScrollPanel>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder>