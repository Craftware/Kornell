<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel addStyleNames="deanHome">
		<g:FlowPanel addStyleNames="courseClassesHeaderWrapper">
			<g:HTMLPanel addStyleNames="title left">Gerenciar Turma: </g:HTMLPanel>
			<b:ListBox ui:field="listBoxCourseClasses" addStyleNames="listBoxCourseClasses"></b:ListBox>
		</g:FlowPanel>
		<g:HTMLPanel addStyleNames="title">Matricular Participante</g:HTMLPanel>
		<g:FlowPanel addStyleNames="controlsPanel">
			<g:FlowPanel addStyleNames="insertPanel">
				<g:Label addStyleNames="inlineLabel">Nome Completo: </g:Label>
				<b:TextBox ui:field="txtFullName"></b:TextBox>
				<g:Label ui:field="identifierLabel" addStyleNames="inlineLabel">Email: </g:Label>
				<b:TextBox ui:field="txtEmail"></b:TextBox>
				<g:Button ui:field="btnAddEnrollment" addStyleNames="btnAction">Matricular</g:Button>
			</g:FlowPanel>
	    	<b:CollapseTrigger ui:field="trigger">
				<g:FlowPanel addStyleNames="insertBatchPanel">
					<g:Button ui:field="btnAddEnrollmentBatchEnable" addStyleNames="btnNotSelected btnAddEnrollmentBatchEnable">Matricular em lote</g:Button>
				</g:FlowPanel>
	    	</b:CollapseTrigger>
		</g:FlowPanel>
		<b:Collapse ui:field="collapse" existTrigger="true" defaultOpen="false">
			<g:FlowPanel addStyleNames="addEnrollmentBatchPanel">
				<b:TextArea ui:field="txtAddEnrollmentBatch"></b:TextArea>
				<g:FlowPanel addStyleNames="infoPanel">
					<g:FlowPanel ui:field="infoPanelEmail" addStyleNames="shy">
						<g:Label addStyleNames="textInfoColor">Formato: </g:Label>
						<g:Label addStyleNames="highlightText">"nome;email" ou somente "email".</g:Label>
						<g:Label addStyleNames="highlightText">* Um participante por linha</g:Label>
						<g:Label addStyleNames="textInfoColor">Exemplo:</g:Label>
						<g:Label addStyleNames="highlightText">Nome Sobrenome;email@example.com </g:Label>
						<g:Label addStyleNames="highlightText">email1@example.com</g:Label>
						<g:Label addStyleNames="highlightText">email2@example.com</g:Label>
					</g:FlowPanel>
					<g:FlowPanel ui:field="infoPanelCPF" addStyleNames="shy">
						<g:Label addStyleNames="textInfoColor">Formato: </g:Label>
						<g:Label addStyleNames="highlightText">"nome;cpf" ou somente "cpf".</g:Label>
						<g:Label addStyleNames="highlightText">* Um participante por linha</g:Label>
						<g:Label addStyleNames="textInfoColor">Exemplo:</g:Label>
						<g:Label addStyleNames="highlightText">Nome Sobrenome;123.456.789-13</g:Label>
						<g:Label addStyleNames="highlightText">123.456.987-13</g:Label>
						<g:Label addStyleNames="highlightText">12345687913</g:Label>
					</g:FlowPanel>
					<g:Button ui:field="btnAddEnrollmentBatch" addStyleNames="btnNotSelected btnAddEnrollmentBatch">Matricular</g:Button>
				</g:FlowPanel>
			</g:FlowPanel>
		</b:Collapse>
		<g:HTMLPanel addStyleNames="title">Participantes</g:HTMLPanel>
		<g:FlowPanel>
			<g:Label addStyleNames="inlineLabel">Matriculados na turma</g:Label>
			<g:Label ui:field="lblCourseClassName" addStyleNames="inlineLabel lblHighlight"></g:Label>
			<g:Label addStyleNames="inlineLabel">do curso</g:Label>
			<g:Label ui:field="lblCourseName" addStyleNames="inlineLabel lblHighlight"></g:Label>
			<g:Label addStyleNames="inlineLabel marginLeft25"> (</g:Label>
			<g:Label ui:field="lblEnrollmentsCount" addStyleNames="inlineLabel lblHighlight"></g:Label>
			<g:Label addStyleNames="inlineLabel">matrículas efetuadas )</g:Label>
		</g:FlowPanel>
		<g:FlowPanel ui:field="enrollmentsWrapper">
		</g:FlowPanel>
		<g:Button ui:field="btnGoToCourse" addStyleNames="btnAction shy">Ir para o curso</g:Button>
		<b:Modal ui:field="errorModal" title="Erros ao inserir matrículas" backdrop="STATIC" addStyleNames="forgotPasswordModal">
			<g:FlowPanel>
				<g:Label>As seguintes linhas contém erros:</g:Label>
				<b:TextArea ui:field="txtModalError"></b:TextArea>
				<g:Label>Deseja ignorar essas linhas e continuar?</g:Label>
				<g:FlowPanel addStyleNames="standardButtonBar">
					<g:Button ui:field="btnModalOK" addStyleNames="btnAction btnStandard"/>
					<g:Button ui:field="btnModalCancel" addStyleNames="btnNotSelected btnStandard"/>
				</g:FlowPanel>
			</g:FlowPanel>
		</b:Modal>
	</g:FlowPanel>

</ui:UiBinder>