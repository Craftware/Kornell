<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	    .title {
			color: white;
			font-size: 1.2em;	
			text-align: center;		
		}
	</ui:style>
	<g:FlowPanel addStyleNames="termsPanel">
	    <g:FlowPanel>
			<b:Paragraph  addStyleNames="{style.title}">Termos de Uso</b:Paragraph>
			<b:Paragraph ui:field="txtInstitutionName" addStyleNames="{style.title}">MIDWAY</b:Paragraph>
		</g:FlowPanel>
		<b:Paragraph ui:field="titleUser" addStyleNames="titleUser"></b:Paragraph>
		<b:Paragraph ui:field="txtTerms" addStyleNames="normal">[Carregando, aguarde...]</b:Paragraph>
		<g:FlowPanel addStyleNames="termsButtonBar">
			<g:Button ui:field="btnAgree" addStyleNames="btnTerms btnAgree"/>
			<g:Button ui:field="btnDontAgree" addStyleNames="btnTerms btnDontAgree"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>