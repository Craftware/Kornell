<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <g:FlowPanel addStyleNames="rolesAdmin">
	  <g:FlowPanel addStyleNames="multiSelect">
			<g:HTMLPanel addStyleNames="title">Editar Administradores da Instituição</g:HTMLPanel>
			<g:Label addStyleNames="subTitle">Escolha na lista abaixo os administradores da instituição. Os administradores da instituição podem alterar as configurações do grupo, adicionar novos administradores de grupo, criar grupos, matricular alunos e responder as mensagens do grupo.</g:Label>
			<b:Form ui:field="institutionAdminForm" addStyleNames="profileForm">
				<g:FlowPanel ui:field="institutionAdminFields" addStyleNames="fieldsWrapper marginTop25">
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="standardButtonBar">
					<g:Button ui:field="institutionAdminBtnOK" addStyleNames="btnAction btnStandard"/>
					<g:Button ui:field="institutionAdminBtnCancel" addStyleNames="btnNotSelected btnStandard"/>
				</g:FlowPanel>
			</b:Form>
		</g:FlowPanel>

	  <g:FlowPanel addStyleNames="multiSelect">
		  <g:HTMLPanel addStyleNames="title">Editar publicadores de conteúdo</g:HTMLPanel>
		  <g:Label addStyleNames="subTitle">Escolha na lista abaixo os publicadores de conteúdo. Os publicadores de conteúdo podem alterar as configurações e o material de conteúdos e versões.</g:Label>
		  <b:Form ui:field="publisherForm" addStyleNames="profileForm">
			  <g:FlowPanel ui:field="publisherFields" addStyleNames="fieldsWrapper marginTop25">
			  </g:FlowPanel>
			  <g:FlowPanel addStyleNames="standardButtonBar">
				  <g:Button ui:field="publisherBtnOK" addStyleNames="btnAction btnStandard"/>
				  <g:Button ui:field="publisherBtnCancel" addStyleNames="btnNotSelected btnStandard"/>
			  </g:FlowPanel>
		  </b:Form>
	  </g:FlowPanel>

	  <g:FlowPanel addStyleNames="multiSelect">
		  <g:HTMLPanel addStyleNames="title">Editar administradores globais de grupos</g:HTMLPanel>
		  <g:Label addStyleNames="subTitle">Escolha na lista abaixo os administradores globais de grupos. Os administradores globais de grupos podem matricular alunos e responder as mensagens de todos os grupos.</g:Label>
		  <b:Form ui:field="institutionCourseClassesAdminForm" addStyleNames="profileForm">
			  <g:FlowPanel ui:field="institutionCourseClassesAdminFields" addStyleNames="fieldsWrapper marginTop25">
			  </g:FlowPanel>
			  <g:FlowPanel addStyleNames="standardButtonBar">
				  <g:Button ui:field="institutionCourseClassesAdminBtnOK" addStyleNames="btnAction btnStandard"/>
				  <g:Button ui:field="institutionCourseClassesAdminBtnCancel" addStyleNames="btnNotSelected btnStandard"/>
			  </g:FlowPanel>
		  </b:Form>
	  </g:FlowPanel>

	  <g:FlowPanel addStyleNames="multiSelect">
		  <g:HTMLPanel addStyleNames="title">Editar observadores globais de grupos</g:HTMLPanel>
		  <g:Label addStyleNames="subTitle">Escolha na lista abaixo os observadores globais de grupos. Os observadores globais de grupos podem visualizar as matrículas e gerar certificados, mas não podem alterar as matrículas nem as configurações do grupo.</g:Label>
		  <b:Form ui:field="institutionCourseClassesObserverForm" addStyleNames="profileForm">
			  <g:FlowPanel ui:field="institutionCourseClassesObserverFields" addStyleNames="fieldsWrapper marginTop25">
			  </g:FlowPanel>
			  <g:FlowPanel addStyleNames="standardButtonBar">
				  <g:Button ui:field="institutionCourseClassesObserverBtnOK" addStyleNames="btnAction btnStandard"/>
				  <g:Button ui:field="institutionCourseClassesObserverBtnCancel" addStyleNames="btnNotSelected btnStandard"/>
			  </g:FlowPanel>
		  </b:Form>
	  </g:FlowPanel>

  </g:FlowPanel>

</ui:UiBinder>