<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel ui:field="contentPanel" addStyleNames="vitrine">
		<g:FlowPanel addStyleNames="boxLogin">
			<b:Image ui:field="imgLogo" addStyleNames="logo"></b:Image>
			<b:Image url="/skins/first/icons/vitrinePersonIcon.png" addStyleNames="personIcon"></b:Image>
			<b:Heading size="1">Bem vindo</b:Heading>
			<b:Paragraph>Por favor identifique-se.</b:Paragraph>
			<b:Alert ui:field="altUnauthorized" type="ERROR" close="false"
				animation="true" heading="Ops... " visible="false">
				Usuário ou senha incorretos, por favor tente novamente.
			</b:Alert>
			<b:Form ui:field="frmLogin">
				<b:TextBox ui:field="txtUsername" placeholder="Nome de usuário" ></b:TextBox>
				<b:PasswordTextBox ui:field="pwdPassword" placeholder="Senha"></b:PasswordTextBox>
				<b:Controls>
					<g:Button ui:field="btnLogin" addStyleNames="btnVitrine btnSelected">Entrar</g:Button>
				</b:Controls>
			</b:Form>
		</g:FlowPanel>
	</g:FlowPanel>


</ui:UiBinder>