<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys='com.google.gwt.i18n.server.keygen.MD5KeyGenerator'
    ui:generateLocales='default'>

	<g:FlowPanel ui:field="vitrineWrapper" addStyleNames="vitrine">
		<g:FlowPanel ui:field="boxLogin" addStyleNames="boxLogin">
			<b:Image ui:field="imgLogo" addStyleNames="logo"></b:Image>
			<b:Alert ui:field="alertError" type="ERROR" close="false" animation="true" visible="false"></b:Alert>
			<g:FlowPanel ui:field="loginPanel">
				<b:Form ui:field="frmLogin">
					<g:Label addStyleNames="inputLabel"><ui:msg description="Username">Usu√°rio</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:TextBox ui:field="txtUsername"></b:TextBox>
					</g:FlowPanel>
					<g:Label addStyleNames="inputLabel"><ui:msg description="Password">Senha</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:PasswordTextBox ui:field="pwdPassword"></b:PasswordTextBox>
					</g:FlowPanel>
					<b:Controls>
						<g:Button ui:field="btnLogin" addStyleNames="btnVitrine btnAction"><ui:msg description="Login button">ENTRAR</ui:msg></g:Button>
			    		<g:Button ui:field="btnForgotPassword" addStyleNames="btnVitrine btnNotSelected linkButton"><ui:msg description="Forgot password">Esqueci a senha</ui:msg></g:Button>
			    		 <g:HTMLPanel ui:field="panelHR" addStyleNames="panelHR" visible="false">
							  <hr/>
							 </g:HTMLPanel>
              <g:Button ui:field="btnRegister" addStyleNames="btnVitrine btnSelected" visible="false"><ui:msg description="Register button">CADASTRAR-SE</ui:msg></g:Button>
					</b:Controls>
				</b:Form>
			</g:FlowPanel>
			<g:FlowPanel ui:field="signUpPanel">
				<b:Form ui:field="frmSignUp">
					<g:Label addStyleNames="inputLabel"><ui:msg description="Full name">Nome Completo</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:TextBox ui:field="suName"></b:TextBox>
					</g:FlowPanel>
					<g:Label addStyleNames="inputLabel"><ui:msg description="Email">Email</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:TextBox ui:field="suEmail"></b:TextBox>
					</g:FlowPanel>
					<g:Label addStyleNames="inputLabel"><ui:msg description="Password">Senha</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:PasswordTextBox ui:field="suPassword"></b:PasswordTextBox>
					</g:FlowPanel>
					<g:Label addStyleNames="inputLabel"><ui:msg description="Confirm password">Confirmar Senha</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:PasswordTextBox ui:field="suPasswordConfirm"></b:PasswordTextBox>
					</g:FlowPanel>
					<b:Controls>
						<g:Button ui:field="btnOK" addStyleNames="btnVitrine btnAction"><ui:msg description="Register button">CADASTRAR-SE</ui:msg></g:Button>
			    		<g:Button ui:field="btnCancel" addStyleNames="btnVitrine btnSelected"><ui:msg description="Cancel button">CANCELAR</ui:msg></g:Button>
					</b:Controls>
				</b:Form>
			</g:FlowPanel>
			<g:FlowPanel ui:field="forgotPasswordPanel">
				<b:Form ui:field="frmforgotPassword">
					<g:Label addStyleNames="inputLabel"><ui:msg description="Email">Email</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:TextBox ui:field="fpEmail"></b:TextBox>
					</g:FlowPanel>
					<b:Controls>
						<g:Button ui:field="btnOKFp" addStyleNames="btnVitrine btnAction"><ui:msg description="Send password change request button">ESQUECI A SENHA</ui:msg></g:Button>
			    		<g:Button ui:field="btnCancelFp" addStyleNames="btnVitrine btnSelected"><ui:msg description="Cancel button">CANCELAR</ui:msg></g:Button>
					</b:Controls>
				</b:Form>
			</g:FlowPanel>
			<g:FlowPanel ui:field="newPasswordPanel">
				<b:Form ui:field="frmNewPassword">
					<g:Label addStyleNames="inputLabel"><ui:msg description="New password">Nova Senha</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:PasswordTextBox ui:field="newPassword"></b:PasswordTextBox>
					</g:FlowPanel>
					<g:Label addStyleNames="inputLabel"><ui:msg description="Confirm password">Confirmar Senha</ui:msg></g:Label>
					<g:FlowPanel addStyleNames="inputWrapper">
						<b:PasswordTextBox ui:field="newPasswordConfirm"></b:PasswordTextBox>
					</g:FlowPanel>
					<b:Controls>
						<g:Button ui:field="btnOKNewPassword" addStyleNames="btnVitrine btnAction"><ui:msg description="Change password button">TROCAR SENHA</ui:msg></g:Button>
			    		<g:Button ui:field="btnCancelNewPassword" addStyleNames="btnVitrine btnSelected"><ui:msg description="Cancel button">CANCELAR</ui:msg></g:Button>
					</b:Controls>
				</b:Form>
			</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder>