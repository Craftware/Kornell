<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">



	<b:FluidContainer addStyleNames="vitrine">
		<b:FluidRow>
			<b:Column size="3" offset="3" addStyleNames="boxLogin">
				<b:Heading size="1">Login</b:Heading>
				<b:Alert ui:field="altUnauthorized" type="ERROR" close="true" animation="true" heading="Ops..." visible="false">
					Usu√°rio ou senha incorretos, por favor tente novamente.
				</b:Alert>
				<b:Form ui:field="frmLogin">
					<b:TextBox ui:field="txtUsername" placeholder="username"></b:TextBox>
					<b:PasswordTextBox ui:field="pwdPassword" placeholder="password"></b:PasswordTextBox>
					<b:Controls>
						<b:Button ui:field="btnLogin" type="PRIMARY">Sign in</b:Button>
					</b:Controls>
				</b:Form>
			</b:Column>
		</b:FluidRow>
	</b:FluidContainer>

</ui:UiBinder>