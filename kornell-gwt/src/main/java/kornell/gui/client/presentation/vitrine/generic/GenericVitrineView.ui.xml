<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel ui:field="contentPanel" addStyleNames="vitrine">
		<g:FlowPanel addStyleNames="boxLogin">
			<b:Image ui:field="imgLogo" addStyleNames="logo"></b:Image>
			<b:Alert ui:field="altUnauthorized" type="ERROR" close="false" animation="true" heading="Ops... " visible="false"></b:Alert>
			<b:Form ui:field="frmLogin">
				<g:FlowPanel addStyleNames="inputWrapper">
					<g:FlowPanel addStyleNames="inputBar"></g:FlowPanel>
					<b:TextBox ui:field="txtUsername" placeholder="seu usuário" ></b:TextBox>
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="inputWrapper">
					<g:FlowPanel addStyleNames="inputBar"></g:FlowPanel>
					<b:PasswordTextBox ui:field="pwdPassword" placeholder="sua senha"></b:PasswordTextBox>
				</g:FlowPanel>
				<b:Controls>
					<g:Button ui:field="btnLogin" addStyleNames="btnVitrine btnAction">ENTRAR</g:Button>
		    		<g:Button ui:field="btnRegister" addStyleNames="btnVitrine btnSelected">CADASTRAR-SE</g:Button>
				</b:Controls>
			</b:Form>
		</g:FlowPanel>
		<b:Alert ui:field="userCreatedAlert" type="SUCCESS" close="true" animation="true" addStyleNames="shy alertVitrine">Usuário criado com sucesso. Enviamos um e-mail para ativação no endereço cadastrado.</b:Alert>
	</g:FlowPanel>

</ui:UiBinder>