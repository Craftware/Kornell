<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel ui:field="contentPanel" addStyleNames="vitrine">
		<g:FlowPanel addStyleNames="boxLogin">
			<b:Heading size="1">Bem vindo</b:Heading>
			<b:Paragraph>Por favor identifique-se.</b:Paragraph>
			<b:Alert ui:field="altUnauthorized" type="ERROR" close="true"
				animation="true" heading="Ops..." visible="false">
				Usuário ou senha incorretos, por favor tente novamente.
			</b:Alert>
			<b:Form ui:field="frmLogin">
				<b:TextBox ui:field="txtUsername" placeholder="Nome de usuário" ></b:TextBox>
				
				<b:PasswordTextBox ui:field="pwdPassword"
					placeholder="Senha"></b:PasswordTextBox>
				<b:Controls>
					<b:Button ui:field="btnLogin" type="PRIMARY">Entrar</b:Button>
				</b:Controls>
			</b:Form>
		</g:FlowPanel>
	</g:FlowPanel>


</ui:UiBinder>