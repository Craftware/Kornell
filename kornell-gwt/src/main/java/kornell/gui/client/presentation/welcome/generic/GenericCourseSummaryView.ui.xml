<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:FlowPanel addStyleNames="courseSummary">
		<b:Image ui:field="imgThumb" addStyleNames="thumb" />
		<g:FlowPanel addStyleNames="details">
			<b:Heading size="1" ui:field="hTitle" />
			<b:Paragraph addStyleNames="description" ui:field="pDescription" />
			<b:Paragraph addStyleNames="courseProgress" ui:field="pProgress"/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>